<p id="notice"><%= notice %></p>

<h1>Articles</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    
    <% @articles.each do |article| %>
      <tr>
        <td><%= link_to "#{article.title}", article %></td>
        <td><%= link_to "Comments", comment_path(article.id) %><%= "(#{comments_count(article.id)})" %></td>
        <!--<td><%= link_to 'Edit', edit_article_path(article) %></td>-->
        <td><%= link_to 'Delete Article', article, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Article', new_article_path %>

<p><%= will_paginate @articles %></p>
